<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/dialog_background"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp" >

        <TextView android:id="@+id/txt_task_descr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Aqui deberia ir el texto de la tarea"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:textSize="14sp"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="10dp"
            android:ellipsize="end" />

        <ImageView android:id="@+id/btn_mark_as_done"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/btn_mark_as_done"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_task_descr"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <TextView android:id="@+id/txt_mark_as_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tarea concluida"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/btn_mark_as_done"
            app:layout_constraintBottom_toBottomOf="@id/btn_mark_as_done"
            app:layout_constraintTop_toTopOf="@id/btn_mark_as_done"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="15dp" />

        <ImageView android:id="@+id/btn_edit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/btn_edit_task"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_mark_as_done"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"/>

        <TextView android:id="@+id/txt_edit_task"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Editar Tarea"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/btn_edit"
            app:layout_constraintBottom_toBottomOf="@id/btn_edit"
            app:layout_constraintTop_toTopOf="@id/btn_edit"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="15dp" />

        <ImageView android:id="@+id/btn_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/btn_delete_task"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"/>

        <TextView android:id="@+id/txt_delete_task"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Borrar Tarea"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/btn_delete"
            app:layout_constraintBottom_toBottomOf="@id/btn_delete"
            app:layout_constraintTop_toTopOf="@id/btn_delete"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="15dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>